# some arguments that must be supplied
ARG GOPROXY
ARG GOVERSION
ARG BASEIMAGE

# Stage to build the driver
FROM golang:${GOVERSION} as builder
ARG GOPROXY
RUN mkdir -p /go/src
COPY ./ /go/src/
WORKDIR /go/src/
RUN CGO_ENABLED=0 \
    make build

FROM registry.access.redhat.com/ubi9/ubi AS ubi-micro-build
RUN mkdir -p /mnt/rootfs
RUN yum install --installroot /mnt/rootfs --releasever 9 --setopt install_weak_deps=false --nodocs -y libaio libuuid numactl xfsprogs e4fsprogs nfs-utils; yum clean all
RUN rm -rf /mnt/rootfs/var/cache/*

# Stage to build the driver image
FROM $BASEIMAGE AS final

# copy in the driver
COPY --from=builder /go/src/csi-isilon /

# copy in all images
COPY --from=ubi-micro-build /mnt/rootfs/ /

ENTRYPOINT ["/csi-isilon"]

LABEL vendor="Dell Inc." \
      name="csi-isilon" \
      summary="CSI Driver for Dell EMC PowerScale" \
      description="CSI Driver for provisioning persistent storage from Dell EMC PowerScale" \
      version="2.8.0" \
      license="Apache-2.0"

COPY ./licenses /licenses
